{
  "git": {
    "tagName": "v${version}",
    "requireCommits": true,
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "commitMessage": "Release v${version} [ci skip]"
  },
  "plugins": {
    "release-it-yarn-workspaces": {
      "workspaces": [
        "packages/*"
      ],
      "skipChecks": true,
      "publish": false
    }
  },
  "npm": {
    "publish": false
  }
}